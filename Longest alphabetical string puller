s = input("Hello Dave: ")
temp1 = "a"
temp2 = 0
temp3 = 0
#temp1 is the previous letter
#temp2 is the current string
#temp3 is the longest string

for first in s:
  if str(first) >= temp1:
    temp1 = first
    temp3 = first
    break

for letter in s:
  if str(letter) >= temp1:
    if temp2 == 0:
      temp1 = letter
      temp2 = letter
    else:
      temp1 = letter
      temp2 = temp2 + letter
      if len(temp2) > len(temp3):
        temp3 = temp2
  else:
    if not (str(letter) < "a"):
    #Are these () necessary?
      if len(temp2) > len(temp3):
        temp3 = temp2
        temp1 = "a"
        temp2 = 0
      else:
        temp1 = "a"
        temp2 = 0
    else:
      temp2 = 0
print("Longest substring in alphabetical order is: " + str(temp3))
